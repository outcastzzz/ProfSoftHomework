<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Style for all textViews in app  -->
    <style name="text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20.sp</item>
        <item name="font">@font/roboto_medium</item>
        <item name="lineHeight">23.44sp</item>
    </style>

    <!--  Style for all buttons in app  -->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:layout_marginStart">32.dp</item>
        <item name="android:layout_marginEnd">32.dp</item>
        <item name="android:paddingTop">14.dp</item>
        <item name="android:paddingBottom">12.dp</item>
        <item name="background">@drawable/bg_app_buttons</item>
    </style>

</resources>