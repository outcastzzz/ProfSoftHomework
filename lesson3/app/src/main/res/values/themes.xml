    <style name="Theme.ProfSoftHomework" parent="Base.Theme.ProfSoftHomework" />

    <style name="Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">23.44sp</item>
    </style>
    
    <style name="ProfileText">
        <item name="android:textSize">13sp</item>
